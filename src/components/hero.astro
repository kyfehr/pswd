---
import { CipherText } from './cipher-text';
import { Container } from './container';
---

<section class="hero">
  <Container>
    <div class="moon">
      <div class="moon-mask"></div>
    </div>
    <div class="title">
      <div class="logo"><img alt="PSWD Logo" src="/logo.svg" /></div>
      <h1>
        <span class="first">Password Generation</span>
        <span class="second">Should Be Simple</span>
        <span class="third">And Secure.</span>
      </h1>
    </div>
    <p>
      That&apos;s why we built <span
        ><CipherText client:load text="PSWD!" /></span
      >
    </p>
  </Container>
</section>

<style>
  .hero {
    position: relative;
    padding: 100px 0 40px;
    overflow-x: hidden;
    text-align: center;

    & .moon {
      position: absolute;
      top: 48px;
      left: 50%;
      z-index: -2;
      transform: translateX(-50%);

      & .moon-mask {
        width: 100vw;
        max-width: 450px;
        height: auto;
        aspect-ratio: 2 / 1;
        background: var(--color-neutral-100);
        border-radius: 9999px 9999px 0 0;
        box-shadow:
          inset 0 2px 0 var(--color-neutral-800),
          inset 0 2px 10px var(--color-neutral-600);
        opacity: 0.4;
        mask-image: linear-gradient(#000, transparent);
      }

      &::before {
        position: absolute;
        inset: -10px;
        content: '';
        border: 1px solid var(--color-neutral-300);
        border-radius: 9999px 9999px 0 0;
        mask-image: linear-gradient(#000, transparent);
      }

      &::after {
        position: absolute;
        inset: -20px;
        content: '';
        border: 1px solid var(--color-neutral-100);
        border-radius: 9999px 9999px 0 0;
        mask-image: linear-gradient(#000, transparent);
      }
    }

    & .logo {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 54px;
      height: 54px;
      margin: 0 auto 16px;
      background: linear-gradient(
        var(--color-neutral-200),
        var(--color-neutral-50),
        var(--color-neutral-50)
      );
      border: 1px solid var(--color-neutral-200);
      border-radius: 18px;
      box-shadow:
        inset 0 -1px 0 var(--color-neutral-100),
        inset 0 1px 0 var(--color-neutral-600);

      & img {
        height: 55%;
        opacity: 1;
      }
    }

    & h1 {
      margin-bottom: 4px;
      font-family: var(--font-display);
      font-size: var(--font-lg);
      font-weight: 700;
      line-height: 1.1;

      & .first,
      & .second,
      & .third {
        display: block;

        & .underline {
          text-decoration: underline;
          text-decoration-style: dotted;
          text-decoration-color: var(--color-foreground);
        }
      }

      & .second {
        color: var(--color-foreground-subtle);
      }

      & .third {
        color: var(--color-foreground-subtler);
      }

      & .gradient {
        background: linear-gradient(
          135deg,
          var(--color-foreground),
          var(--color-foreground),
          var(--color-neutral-500)
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    }

    & p {
      height: 1.4rem;
      margin-top: 16px;
      font-size: var(--font-sm);
      color: var(--color-foreground-subtler);

      & strong {
        font-weight: 500;
        color: var(--color-foreground-subtle);
      }

      & span {
        font-family: var(--font-mono);
        color: var(--color-foreground-subtle);
      }
    }
  }
</style>
