---
import { CipherText } from './cipher-text';
import { Container } from './container';
import Matrix from './matrix.astro';
---

<Container>
  <section class="hero">
    <Matrix />
    <div class="title">
      <div class="logo"><img alt="PSWD Logo" src="/logo.svg" /></div>
      <h1>
        <span class="first">Password Generation</span>
        <span class="second">Should Be Simple</span>
        <span class="third">And Secure.</span>
      </h1>
    </div>
    <p>
      That&apos;s why we built <span
        ><CipherText client:load text="PSWD!" /></span
      >
    </p>
    <div class="circle-wrapper">
      <div class="circle"></div>
    </div>
    <div class="divider"></div>
  </section>
</Container>

<style>
  .hero {
    position: relative;
    padding: 100px 0 40px;
    text-align: center;

    & .logo {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 54px;
      height: 54px;
      margin: 0 auto 16px;
      background: linear-gradient(
        var(--color-neutral-200),
        var(--color-neutral-50),
        var(--color-neutral-50)
      );
      border: 1px solid var(--color-neutral-200);
      border-radius: 18px;
      box-shadow:
        inset 0 -1px 0 var(--color-neutral-100),
        inset 0 1px 0 var(--color-neutral-600);

      & img {
        height: 55%;
        opacity: 1;
      }
    }

    & h1 {
      margin-bottom: 4px;
      font-family: var(--font-display);
      font-size: var(--font-lg);
      font-weight: 700;
      line-height: 1.1;

      & .first,
      & .second,
      & .third {
        display: block;

        & .underline {
          text-decoration: underline;
          text-decoration-style: dotted;
          text-decoration-color: var(--color-foreground);
        }
      }

      & .second {
        color: var(--color-foreground-subtle);
      }

      & .third {
        color: var(--color-foreground-subtler);
      }

      & .gradient {
        background: linear-gradient(
          135deg,
          var(--color-foreground),
          var(--color-foreground),
          var(--color-neutral-500)
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    }

    & p {
      height: 1.4rem;
      margin-top: 16px;
      font-size: var(--font-sm);
      color: var(--color-foreground-subtler);

      & strong {
        font-weight: 500;
        color: var(--color-foreground-subtle);
      }

      & span {
        font-family: var(--font-mono);
        color: var(--color-foreground-subtle);
      }
    }

    & .circle-wrapper {
      padding-top: 4px;
      margin: 0;
      overflow-y: hidden;

      & .circle {
        width: 60px;
        height: 30px;
        margin: 0 auto;
        background: linear-gradient(transparent, var(--color-neutral-400));
        filter: blur(10px);
        border-radius: 1000px 1000px 0 0;
        opacity: 0.25;
      }
    }

    & .divider {
      width: 140px;
      height: 1px;
      margin: 0 auto;
      background: linear-gradient(
        90deg,
        transparent,
        var(--color-neutral-100),
        var(--color-neutral-300),
        var(--color-neutral-500),
        var(--color-neutral-300),
        var(--color-neutral-100),
        transparent
      );
    }
  }
</style>
